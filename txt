/* styles the whole page â€” font, background, text color, where the text is */
body {
    font-family: 'Poppins', sans-serif;  
    background-color: pink;             
    color: #d088e2;                       
    text-align: center;               
  }
  
  /* styles the header */
  h1 {
    font-size: 2rem;         
    margin-top: 4%;         
    padding-top: 10px;       
  }
  
  /* corresponds to the <ul> section in index.html */
  ul {
    display: flex;                      
    justify-content: space-between;     
    align-items: center;                
    gap: 10px;                         
    padding-left: 1em;   
    padding-right: 1em;                    
    list-style: none;                   /* removes the bullet points */
  }
  
  /* the diagram image (i set a max and min size for it) */
  img {
    max-width: 90vw;      
    height: 5cm;          
    min-width: 100px;     
  }

  /* footer at the end of the page */
  footer {
    margin-bottom: 10px 5px;                  
    padding-bottom: 10px; 
    padding-top: 10px;                    
    border: 2px solid white;           /* adds white border around the box */
    border-radius: 8px;                /* rounds the corners */
  }
  

  /* color for all h2s in index.html */
  h2 {
    color: rgb(255, 105, 180);         
  }
  
  /* color for paragraphs */
  p {
    color: #d088e2;                  
  }
  
  /* color for sections of the page */
  section {
    background-color: hsl(320, 100%, 90%);
  }
  

  :root {
    --main-highlight: skyblue;     
  }
  h3 {
    background-color: var(--main-highlight, lightblue);  
    /* uses light blue for the background color, but would use skyblue if that had failed */

    position: relative;
    left: 10px;    /* moves the h3 slightly right */
    margin: 20px 20px 20px 20px 
  }
  
  
  /* how the button looks when user hover */
  button:hover {
    background-color: color-mix(in srgb, red 40%, white 60%);        
    color: pink;                     
  }
  
  /* color change when user clicks on a text box */
  input:active {
    border-color: red;              
  }
  
  
  
  /* applies anywhere where class="note" */
  .note {
    font-style: italic;
  }
  
  /* applied everywhere id="highlight" */
  #highlight {
    font-weight: bold;
  }
  
  /* universal selector --> applies to everything */
  * {
    box-sizing: border-box;
  }
  
  /* attribute selector --> applies specifically to text types */
  input[type="text"] {
    border: 4px solid pink;
  }
  
  /* all p tags and all li tags get the same font size */
  p, li {
    font-size: 1rem;
  }


  /* child combinator --> applies to all h2's in all the sections */
  section > h2 {
    text-decoration: underline;
  }
  
  /* descendant --> applies to h2 */
  section h2 {
    text-transform: uppercase;
  }
  
  /* adjacent sibling --> applies to p that comes right after an h2 */
  h2 + p {
    font-style: italic;
  }
  
  /* general sibling --> applies to p anywhere after an h2 */
  h2 ~ p {
    font-weight: 300;
  }
  
  /* applies to all h2 with class="note" */
  h2.note {
    color: violet;
  }

  /* applies to any section with a video */
  section:has(video) {
    border: 2px dashed white;
  }
  
  
  /* applies to sections with class="grid-layout" */
  section.grid-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;     /* 2 equal-width columns */
    gap: 10px;                          
    justify-items: center;    
    border-style: dotted; 
    border-width: 4px;        
  }

  /* Nested selector --> applies to all sections with videos and all h2 in them */
  section:has(video) {
    border: 4px solid palevioletred;
  
    h2 {
      font-family: monospace;
      color: teal;
    }
  }

  /* applies to .hidden-paragraph and hides it on the live page */
.hidden-paragraph {
    display: none;
  }

  
  .inline-box {
    display: inline-block;
    background-color: white;
    color: black;
    padding: 5px 10px;
    margin-left: 5px;
    border-radius: 5px;
  }

header {
    position: sticky;
    top: 10px;
    background-color: rgb(158, 222, 244);
  }

img {
    position: block;
    margin: auto;
}
  
  
  /* Only runs if screen is smaller than 600px (like a phone) */
  @media (max-width: 600px) {
    body {
      background-color: hotpink;       /* changes bg on small screens */
      font-size: 14px;                 /* smaller font overall */
    }
  
    ul {
      flex-direction: column;          /* stacks the list items vertically */
    }
  
    h1 {
      font-size: 20px;                 /* makes the header smaller on phones */
